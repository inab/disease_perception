[
	{
		"selector": "node",
		"css": {
			"content": "data(name)",
			"text-valign": "center",
			"text-halign": "center",
			"text-wrap": "wrap",
			"text-max-width": "5em",
			"background-color": "data(color)",
			"font-size": "0.7em",
			"text-outline-color": "#555",
			"text-outline-width": "1px",
			"color": "#fff",
			"overlay-padding": "6px",
			"opacity": "1",
			"z-index": "10"
		}
	},
	{
		"selector": "$node > node",
		"css": {
			"padding-top": "10px",
			"padding-left": "10px",
			"padding-bottom": "10px",
			"padding-right": "10px",
			"text-valign": "top",
			"text-halign": "center",
			"border-color": "data(color)",
			"background-opacity": "0"
		}
	},
	{
		"selector": "edge",
		"css": {
			"target-arrow-shape": "triangle",
			"curve-style": "haystack",
			"haystack-radius": "0.5",
			"opacity": "0.4",
			"line-color": "mapData(rel_risk, -10, 10, red, blue)",
			"width": "mapData(rel_risk, 0, 50, 1, 8)",
			"overlay-padding": "3px"
		}
	},
	{
		"selector": ":selected",
		"css": {
			"background-color": "black",
			"line-color": "black",
			"target-arrow-color": "black",
			"source-arrow-color": "black"
		}
	}
]
